<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" cacheShape="false" centerShape="false" fillWidth="false" prefHeight="400.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.javafx2.ViewController">
   <children>
      <Label text="Calculate Sum">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" alignment="CENTER" promptText="First Number" />
      <TextField fx:id="txtNumber2" alignment="CENTER" promptText="Second Number" />
      <Button fx:id="btnSum" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Label text="Result" />
      <Label fx:id="labelResult" />
   </children>
</VBox>
